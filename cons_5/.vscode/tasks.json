{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-I./C5/include/server/",
                "-I./C5/include/xmlrpc/",
                "./C5/src/server/*.cpp",
                "./C5/lib/xmlrpc.a",
                "-lws2_32",
                "-o",
                "./C5/build/server",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-I./C5/include/client/",
                "-I./C5/include/xmlrpc/",
                "./C5/src/client/*.cpp",
                "./C5/lib/xmlrpc.a",
                "-lws2_32",
                "-o",
                "./C5/build/client",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build xmlrpcobjects",
            "type": "shell",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-I./C5/include/xmlrpc/",
                "./C5/src/xmlrpc/*.cpp",
                "-o",
                "./C5/bin/xmlrpc/*.o",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build xmlrpc lib",
            "type": "shell",
            "command": "ar",
            "args": [
                "./C5/lib/xmlrpc.a",
                "./C5/bin/xmlrpc/*.o",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}